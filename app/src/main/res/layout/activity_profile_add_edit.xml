<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="layout/activity_profile_add_edit_0">

    <include
        android:id="@+id/includedToolbar"
        layout="@layout/toolbar_binding" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView style="@style/CardViewCommon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            style="@style/TextViewTitleCommon"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="@string/your_detail"
                            android:textColor="@color/actionbar" />

                        <ImageView
                            android:id="@+id/imgPickOwn"
                            style="@style/ImageViewButtonCommon"
                            android:layout_gravity="right"
                            android:src="@drawable/phone_book"
                            app:tint="@color/actionbar" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/actionbar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewLightCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/name" />

                            <EditText
                                android:id="@+id/etName"
                                style="@style/EditTextCommon"
                                android:layout_marginBottom="4dp"
                                android:hint="@string/name"
                                android:minHeight="48dp"
                                android:singleLine="true"
                                android:tag="binding_1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtMale"
                                style="@style/TextViewLightSquareCommon"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:tag="binding_2"
                                android:text="@string/male" />

                            <TextView
                                android:id="@+id/txtFemale"
                                style="@style/TextViewLightSquareCommon"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:tag="binding_3"
                                android:text="@string/female" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:text="@string/phone_number" />

                                    <EditText
                                        android:id="@+id/etPhoneNumber"
                                        style="@style/EditTextCommon"
                                        android:layout_marginBottom="4dp"
                                        android:hint="@string/phone_number"
                                        android:inputType="phone"
                                        android:minHeight="48dp"
                                        android:singleLine="true"
                                        android:tag="binding_4" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgPhone"
                                    style="@style/ImageViewButtonCommon"
                                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                                    android:src="@drawable/call"
                                    app:tint="@color/actionbar" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:text="@string/email_id" />

                                    <EditText
                                        android:id="@+id/etEmailId"
                                        style="@style/EditTextCommon"
                                        android:layout_marginBottom="4dp"
                                        android:hint="@string/email_id"
                                        android:inputType="textEmailAddress"
                                        android:minHeight="48dp"
                                        android:singleLine="true"
                                        android:tag="binding_5" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgEmail"
                                    style="@style/ImageViewButtonCommon"
                                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                                    android:src="@drawable/email"
                                    app:tint="@color/actionbar" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:text="@string/address" />

                                    <EditText
                                        android:id="@+id/etAddress"
                                        style="@style/EditTextCommon"
                                        android:layout_marginBottom="4dp"
                                        android:hint="@string/address"
                                        android:inputType="textMultiLine"
                                        android:minLines="2"
                                        android:tag="binding_6" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgAddress"
                                    style="@style/ImageViewButtonCommon"
                                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                                    android:src="@drawable/address"
                                    app:tint="@color/actionbar" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/CardViewCommon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            style="@style/TextViewTitleCommon"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="@string/partner_detail"
                            android:textColor="@color/actionbar" />

                        <ImageView
                            android:id="@+id/imgPickPartner"
                            style="@style/ImageViewButtonCommon"
                            android:layout_gravity="right"
                            android:src="@drawable/phone_book"
                            app:tint="@color/actionbar" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/actionbar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewLightCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/name" />

                            <EditText
                                android:id="@+id/etNamePartner"
                                style="@style/EditTextCommon"
                                android:layout_marginBottom="4dp"
                                android:hint="@string/name"
                                android:minHeight="48dp"
                                android:singleLine="true"
                                android:tag="binding_7" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtMalePartner"
                                style="@style/TextViewLightSquareCommon"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:tag="binding_8"
                                android:text="@string/male" />

                            <TextView
                                android:id="@+id/txtFemalePartner"
                                style="@style/TextViewLightSquareCommon"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:tag="binding_9"
                                android:text="@string/female" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linEditContactPartner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:text="@string/phone_number" />

                                    <EditText
                                        android:id="@+id/etPhoneNumberPartner"
                                        style="@style/EditTextCommon"
                                        android:layout_marginBottom="4dp"
                                        android:hint="@string/phone_number"
                                        android:inputType="phone"
                                        android:minHeight="48dp"
                                        android:singleLine="true"
                                        android:tag="binding_10" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgPhonePartner"
                                    style="@style/ImageViewButtonCommon"
                                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                                    android:src="@drawable/call"
                                    app:tint="@color/actionbar" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:text="@string/email_id" />

                                    <EditText
                                        android:id="@+id/etEmailIdPartner"
                                        style="@style/EditTextCommon"
                                        android:layout_marginBottom="4dp"
                                        android:hint="@string/email_id"
                                        android:inputType="textEmailAddress"
                                        android:minHeight="48dp"
                                        android:singleLine="true"
                                        android:tag="binding_11" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgEmailPartner"
                                    style="@style/ImageViewButtonCommon"
                                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                                    android:src="@drawable/email"
                                    app:tint="@color/actionbar" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:text="@string/address" />

                                    <EditText
                                        android:id="@+id/etAddressPartner"
                                        style="@style/EditTextCommon"
                                        android:layout_marginBottom="4dp"
                                        android:hint="@string/address"
                                        android:inputType="textMultiLine"
                                        android:minLines="2"
                                        android:tag="binding_12" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgAddressPartner"
                                    style="@style/ImageViewButtonCommon"
                                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                                    android:src="@drawable/address"
                                    app:tint="@color/actionbar" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardViewCommon"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            style="@style/TextViewTitleCommon"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="@string/wedding_detail"
                            android:textColor="@color/actionbar" />

                        <ImageView
                            style="@style/ImageViewButtonCommon"
                            android:layout_gravity="right"
                            android:src="@drawable/phone_book"
                            android:visibility="invisible"
                            app:tint="@color/actionbar" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/actionbar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewLightCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/name" />

                            <EditText
                                android:id="@+id/etNameWedding"
                                style="@style/EditTextCommon"
                                android:layout_marginBottom="4dp"
                                android:hint="@string/name"
                                android:minHeight="48dp"
                                android:singleLine="true"
                                android:tag="binding_13" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewLightCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/ceremony_date" />

                            <TextView
                                android:id="@+id/txtDate"
                                style="@style/TextViewLightSquareCommon"
                                android:hint="@string/select_date"
                                android:tag="binding_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewLightCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/ceremony_time" />

                            <TextView
                                android:id="@+id/txtTime"
                                style="@style/TextViewLightSquareCommon"
                                android:hint="@string/ceremony_time"
                                android:tag="binding_15" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewLightCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/budget" />

                            <EditText
                                android:id="@+id/etBudget"
                                style="@style/EditTextCommon"
                                android:hint="@string/budget"
                                android:inputType="numberDecimal"
                                android:maxWidth="64dp"
                                android:maxLength="10"
                                android:minWidth="24dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btnAddEdit"
                style="@style/ButtonCommon"
                android:text="Save"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
