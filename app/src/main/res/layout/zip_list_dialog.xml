<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center" android:background="@drawable/dialog_back" android:layout_width="210dp" android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/linearselect" android:background="#025c8a" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="20dp" android:textColor="@color/white" android:gravity="center_horizontal" android:id="@+id/txt" android:padding="7dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Select your options" android:fontFamily="@font/regular"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearuploaddrive" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/linearselect">
        <TextView android:textSize="17dp" android:id="@+id/txtupload_drive" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:text="Upload to Drive" android:fontFamily="@font/regular"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/linearview" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_below="@+id/linearuploaddrive">
        <TextView android:textSize="17dp" android:id="@+id/textView5" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:text="Restore Database" android:fontFamily="@font/regular"/>
    </LinearLayout>
    <LinearLayout android:id="@+id/lineardelete" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:layout_below="@+id/linearview">
        <TextView android:textSize="17dp" android:id="@+id/txtdelete" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:text="Delete" android:fontFamily="@font/regular"/>
    </LinearLayout>
</RelativeLayout>
