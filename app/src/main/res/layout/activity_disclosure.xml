<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="#edecec" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/topPanel" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_above="@+id/agreeAndContinue">
        <ImageView android:layout_gravity="center_horizontal" android:padding="20dp" android:layout_width="150dp" android:layout_height="150dp" android:src="@drawable/privacy_policy"/>
        <LinearLayout android:orientation="vertical" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="22sp" android:textStyle="bold" android:textColor="#1a73e8" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/termsOfService"/>
            <TextView android:textSize="15sp" android:textColor="@android:color/black" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="6dp" android:layout_marginBottom="6dp" android:text="@string/termsOfServiceSummery" android:lineSpacingExtra="3dp"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#1a73e8" android:id="@+id/termsOfService" android:paddingTop="4dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/termsOfService" android:onClick="onClick" android:textAllCaps="true"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#1a73e8" android:id="@+id/privacyPolicy" android:paddingTop="4dp" android:paddingBottom="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/privacy_policy" android:onClick="onClick" android:textAllCaps="true"/>
            <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="#1a73e8" android:id="@+id/userAgreement" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/permissionDisclose" android:onClick="onClick" android:textAllCaps="true"/>
        </LinearLayout>
    </LinearLayout>
    <Button android:textColor="@android:color/white" android:id="@+id/agreeAndContinue" android:background="@drawable/agree_and_continue" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="10dp" android:text="@string/acceptAndContinue" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" android:onClick="onClick" android:textAllCaps="true"/>
</RelativeLayout>
