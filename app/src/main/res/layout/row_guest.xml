<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:tag="layout/row_guest_0">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="@dimen/_10sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIcon"
                style="@style/ImageViewButtonCommon"
                android:layout_marginRight="4dp"
                android:padding="0dp"
                android:tag="binding_1"
                app:tint="@color/actionbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TextViewTitleCommon"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:tag="binding_2" />

                    <TextView
                        android:id="@+id/tv_invit_status"
                        style="@style/TextViewTitleLightCommon"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:tag="binding_3" />

                    <TextView
                        style="@style/TextViewDescCommon"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:tag="binding_4"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgCheck"
                    style="@style/ImageViewButtonCommon"
                    android:tag="binding_5"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_numbers"
                    style="@style/TextViewTitleLightCommon"
                    android:layout_width="wrap_content"
                    android:tag="binding_6" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
