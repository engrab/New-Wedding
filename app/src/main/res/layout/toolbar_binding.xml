<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/linMainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"
            android:background="@color/actionbar"
            android:gravity="center"
            android:padding="0dp"
            android:theme="@style/AppTheme"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imgDrawer"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/menu"
                        android:tag="binding_1" />

                    <ImageView
                        android:id="@+id/imgBack"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_marginRight="4dp"
                        android:gravity="center"
                        android:padding="8dp"
                        android:src="@drawable/back"
                        android:tag="binding_2"
                        app:tint="@color/white"
                        android:layout_marginEnd="4dp" />

                    <ImageView
                        android:id="@+id/imageHome"
                        android:layout_width="64dp"
                        android:layout_height="32dp"
                        android:gravity="center"
                        android:padding="4dp"
                        android:src="@drawable/drawer_home"
                        android:tag="binding_3"
                        app:tint="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:layout_marginStart="8dp">

                        <TextView
                            android:id="@+id/textTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/semibold"
                            android:singleLine="true"
                            android:tag="binding_4"
                            android:textColor="@color/white"
                            android:textSize="20dp" />

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="0dp"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/regular"
                            android:padding="4dp"
                            android:src="@drawable/ic_arrow_drop_down_black"
                            android:tag="binding_5"
                            android:textColor="@color/black"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/search"
                            style="@style/AppTheme.SearchView"
                            android:tag="binding_6"
                            app:queryHint="Search here"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminateDrawable="@drawable/progressbar_custom_small"
                        android:padding="4dp"
                        android:tag="binding_7" />

                    <ImageView
                        android:id="@+id/imgShare"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:padding="8dp"
                        android:src="@drawable/pdf"
                        android:tag="binding_8"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/imgAdd"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:padding="8dp"
                        android:src="@drawable/add"
                        android:tag="binding_9"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/imgDelete"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:padding="8dp"
                        android:src="@drawable/delete"
                        android:tag="binding_10"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/imgOther"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:padding="8dp"
                        android:src="@drawable/add"
                        android:tag="binding_11"
                        app:tint="@color/white" />

                    <EditText
                        android:id="@+id/etOther"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/et_selector_bottom_line"
                        android:digits="0123456789"
                        android:ellipsize="end"
                        android:focusableInTouchMode="true"
                        android:fontFamily="@font/regular"
                        android:gravity="top|bottom|left|right|center_vertical|fill_vertical|center_horizontal|fill_horizontal|center|fill|start|end"
                        android:imeOptions="actionDone"
                        android:inputType="none|text|textCapCharacters|textCapWords|textUri|number|numberSigned|numberDecimal|numberPassword|phone"
                        android:lines="1"
                        android:maxLines="1"
                        android:minHeight="48dp"
                        android:padding="4dp"
                        android:singleLine="true"
                        android:tag="binding_12"
                        android:textColor="@color/white"
                        android:textColorHint="@color/textColorLight" />
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/toolbar_shadow"
        android:visibility="gone" />
</LinearLayout>
