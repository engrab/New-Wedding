<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="layout/activity_guest_add_edit_0">

    <include
        android:id="@+id/includedToolbar"
        layout="@layout/toolbar_binding" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView style="@style/CardViewCommon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            style="@style/TextViewTitleCommon"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:tag="binding_1"
                            android:textColor="@color/actionbar" />

                        <ImageView
                            android:id="@+id/imgEdit"
                            style="@style/ImageViewButtonCommon"
                            android:layout_gravity="right"
                            android:tag="binding_2"
                            android:visibility="invisible"
                            app:tint="@color/actionbar" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/actionbar" />

                    <LinearLayout
                        android:id="@+id/linEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp"
                        android:tag="binding_3">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewLightCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/name" />

                            <EditText
                                android:id="@+id/etName"
                                style="@style/EditTextCommon"
                                android:layout_marginBottom="4dp"
                                android:hint="@string/name"
                                android:singleLine="true"
                                android:tag="binding_4" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:id="@+id/m_radio_g"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/txtMale"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/selector_button"
                                    android:button="@android:color/transparent"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="Male"
                                    android:textColor="@drawable/selection_text_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".2" />

                                <RadioButton
                                    android:id="@+id/txtFemale"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/selector_button"
                                    android:button="@android:color/transparent"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="Female"
                                    android:textColor="@drawable/selection_text_color" />
                            </RadioGroup>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/txtAdult"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/selector_button"
                                    android:button="@android:color/transparent"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="@string/adult"
                                    android:textColor="@drawable/selection_text_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".2" />

                                <RadioButton
                                    android:id="@+id/txtChild"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/selector_button"
                                    android:button="@android:color/transparent"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="@string/child"
                                    android:textColor="@drawable/selection_text_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".2" />

                                <RadioButton
                                    android:id="@+id/txtBaby"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/selector_button"
                                    android:button="@android:color/transparent"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="@string/baby"
                                    android:textColor="@drawable/selection_text_color" />
                            </RadioGroup>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewLightCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/note" />

                            <EditText
                                android:id="@+id/etNote"
                                style="@style/EditTextCommon"
                                android:layout_marginBottom="4dp"
                                android:hint="@string/note"
                                android:inputType="textMultiLine"
                                android:minLines="2"
                                android:tag="binding_10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="horizontal"
                            android:tag="binding_11">

                            <RadioGroup
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/txtInvitationSent"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/selector_button"
                                    android:button="@android:color/transparent"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="@string/invitation_sent"
                                    android:textColor="@drawable/selection_text_color" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight=".2" />

                                <RadioButton
                                    android:id="@+id/txtInvitationNotSent"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/selector_button"
                                    android:button="@android:color/transparent"
                                    android:elevation="5dp"
                                    android:gravity="center"
                                    android:padding="12dp"
                                    android:text="@string/not_sent"
                                    android:textColor="@drawable/selection_text_color" />
                            </RadioGroup>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView style="@style/CardViewCommon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            style="@style/TextViewTitleCommon"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="@string/contact_details"
                            android:textColor="@color/actionbar" />

                        <ImageView
                            android:id="@+id/imgExpandContact"
                            style="@style/ImageViewButtonCommon"
                            android:layout_gravity="right"
                            android:tag="binding_14"
                            app:tint="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:tag="binding_15">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/actionbar" />

                        <LinearLayout
                            android:id="@+id/linEditContact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:tag="binding_16">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:text="@string/phone_number" />

                                    <EditText
                                        android:id="@+id/etPhoneNumber"
                                        style="@style/EditTextCommon"
                                        android:layout_marginBottom="4dp"
                                        android:hint="@string/phone_number"
                                        android:inputType="phone"
                                        android:singleLine="true"
                                        android:tag="binding_17" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgPhone"
                                    style="@style/ImageViewButtonCommon"
                                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                                    android:src="@drawable/call"
                                    app:tint="@color/actionbar" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:text="@string/email_id" />

                                    <EditText
                                        android:id="@+id/etEmailId"
                                        style="@style/EditTextCommon"
                                        android:layout_marginBottom="4dp"
                                        android:hint="@string/email_id"
                                        android:inputType="textEmailAddress"
                                        android:singleLine="true"
                                        android:tag="binding_18" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgEmail"
                                    style="@style/ImageViewButtonCommon"
                                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                                    android:src="@drawable/email"
                                    app:tint="@color/actionbar" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="match_parent"
                                        android:layout_weight="1"
                                        android:text="@string/address" />

                                    <EditText
                                        android:id="@+id/etAddress"
                                        style="@style/EditTextCommon"
                                        android:layout_marginBottom="4dp"
                                        android:hint="@string/address"
                                        android:inputType="textMultiLine"
                                        android:minLines="2"
                                        android:tag="binding_19" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/imgAddress"
                                    style="@style/ImageViewButtonCommon"
                                    android:layout_gravity="bottom|right|center_vertical|center_horizontal|center"
                                    android:src="@drawable/address"
                                    app:tint="@color/actionbar" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardViewCommon"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:tag="binding_20">

                <LinearLayout
                    android:id="@+id/llCompanion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            style="@style/TextViewTitleCommon"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="@string/companions"
                            android:textColor="@color/actionbar" />

                        <ImageView
                            android:id="@+id/imgAddAnother"
                            style="@style/ImageViewButtonCommon"
                            android:layout_gravity="right"
                            android:src="@drawable/add"
                            app:tint="@color/actionbar" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/actionbar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/linNoData"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="8dp">

                                <ImageView
                                    android:id="@+id/imgAddNoData"
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:padding="8dp"
                                    android:src="@drawable/add"
                                    app:tint="@color/actionbar" />

                                <TextView
                                    style="@style/TextViewDescCommon"
                                    android:layout_marginBottom="8dp"
                                    android:text="@string/no_companions_found" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/linData"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycler"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp" />
                            </LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnAddEdit"
        style="@style/ButtonCommon"
        android:text="AddEdit"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llAdds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="horizontal">

    </LinearLayout>

</LinearLayout>
