<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/includedToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="0dp"
                    android:theme="@style/AppTheme"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/img_menu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:foreground="?android:attr/selectableItemBackground"

                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/ic_menu" />

                                <TextView
                                    android:id="@+id/textTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/regular"
                                    android:singleLine="true"
                                    android:text="@string/appTitle"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txtMarriageName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:text="Groom and Bride"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/splash"
                    app:civ_border_color="#FE3A05"
                    app:civ_border_width="5dp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_image"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/ic_baseline_photo_camera_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/fab_profile"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewLightCommon"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:text="Days"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txtDays"
                            style="@style/TextViewTitleCommon"
                            android:text="00"
                            android:textColor="@color/black"
                            android:textSize="20dp" />


                    </LinearLayout>

                    <TextView
                        style="@style/TextViewTitleCommon"
                        android:layout_gravity="top"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewLightCommon"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:text="Hrs"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txtHours"
                            style="@style/TextViewTitleCommon"
                            android:text="00"
                            android:textColor="@color/black"
                            android:textSize="20dp" />


                    </LinearLayout>

                    <TextView
                        style="@style/TextViewTitleCommon"
                        android:layout_gravity="top"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewLightCommon"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:text="Mins"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txtMinutes"
                            style="@style/TextViewTitleCommon"
                            android:text="00"
                            android:textColor="@color/black"
                            android:textSize="20dp" />


                    </LinearLayout>

                    <TextView
                        style="@style/TextViewTitleCommon"
                        android:layout_gravity="top"
                        android:text=":"
                        android:textColor="@color/black"
                        android:textSize="20dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            style="@style/TextViewLightCommon"
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:text="Secs"
                            android:textColor="@color/black"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/txtSeconds"
                            style="@style/TextViewTitleCommon"
                            android:text="00"
                            android:textColor="@color/black"
                            android:textSize="20dp" />


                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llAdds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tapdaq.sdk.TMBannerAdView
                    android:id="@+id/adBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>


    <include
        android:id="@+id/nav_drawer"
        layout="@layout/nav_header_main"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>
