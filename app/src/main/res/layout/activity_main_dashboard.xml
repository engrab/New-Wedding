<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="layout/activity_main_dashboard_0">

    <LinearLayout
        android:id="@+id/includedToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/linMainTool"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="center"
                android:background="@color/splash_gradient_start"
                android:gravity="center"
                android:padding="0dp"
                android:theme="@style/AppTheme"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_weight="1"
                            android:gravity="left">

                            <TextView
                                android:id="@+id/textTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="4dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/regular"
                                android:singleLine="true"
                                android:text="@string/appTitle"
                                android:textColor="@color/white"
                                android:textSize="20dp" />
                        </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.appcompat.widget.Toolbar>
        </FrameLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/splashBg"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <LinearLayout
            android:id="@+id/linRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_bg_gradient"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="140dp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtMarriageName"
                                style="@style/TextViewTitleCommon"
                                android:maxLines="2"
                                android:singleLine="false"
                                android:text="Groom and Bride"
                                android:textColor="@color/white"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtDays"
                                        style="@style/TextViewTitleCommon"
                                        android:text="00"
                                        android:textColor="@color/white"
                                        android:textSize="20dp" />

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="wrap_content"
                                        android:gravity="center"
                                        android:text="Days"
                                        android:textColor="@color/white"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <TextView
                                    style="@style/TextViewTitleCommon"
                                    android:layout_gravity="top"
                                    android:text=":"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtHours"
                                        style="@style/TextViewTitleCommon"
                                        android:text="00"
                                        android:textColor="@color/white"
                                        android:textSize="20dp" />

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="wrap_content"
                                        android:gravity="center"
                                        android:text="Hrs"
                                        android:textColor="@color/white"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <TextView
                                    style="@style/TextViewTitleCommon"
                                    android:layout_gravity="top"
                                    android:text=":"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtMinutes"
                                        style="@style/TextViewTitleCommon"
                                        android:text="00"
                                        android:textColor="@color/white"
                                        android:textSize="20dp" />

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="wrap_content"
                                        android:gravity="center"
                                        android:text="Mins"
                                        android:textColor="@color/white"
                                        android:textSize="12dp" />
                                </LinearLayout>

                                <TextView
                                    style="@style/TextViewTitleCommon"
                                    android:layout_gravity="top"
                                    android:text=":"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/txtSeconds"
                                        style="@style/TextViewTitleCommon"
                                        android:text="00"
                                        android:textColor="@color/white"
                                        android:textSize="20dp" />

                                    <TextView
                                        style="@style/TextViewLightCommon"
                                        android:layout_width="wrap_content"
                                        android:gravity="center"
                                        android:text="Secs"
                                        android:textColor="@color/white"
                                        android:textSize="12dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_gravity="right"
                            android:scaleType="fitXY"
                            android:src="@drawable/dashboard_image" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/remainingTime"
                        style="@style/TextViewTitleCommon"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="timer"
                        android:textColor="@color/actionbar"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="6dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTasks"
                    style="@style/CardViewDash"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        style="@style/LinearLayoutDashCard"
                        android:background="@drawable/task_list_bg_gradient">

                        <ImageView
                            style="@style/ImageViewDashCard"
                            android:src="@drawable/drawer_tasks" />

                        <TextView
                            style="@style/TextViewDashCard"
                            android:text="@string/drawerTitleCheckList" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardGuests"
                    style="@style/CardViewDash"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        style="@style/LinearLayoutDashCard"
                        android:background="@drawable/guest_list_bg_gradient">

                        <ImageView
                            style="@style/ImageViewDashCard"
                            android:src="@drawable/drawer_guests" />

                        <TextView
                            style="@style/TextViewDashCard"
                            android:text="@string/drawerTitleGuests" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardBudget"
                    style="@style/CardViewDash"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        style="@style/LinearLayoutDashCard"
                        android:background="@drawable/budget_list_bg_gradient">

                        <ImageView
                            style="@style/ImageViewDashCard"
                            android:src="@drawable/drawer_budgets" />

                        <TextView
                            style="@style/TextViewDashCard"
                            android:text="@string/drawerTitleBudget" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardVendor"
                    style="@style/CardViewDash"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground">

                    <LinearLayout
                        style="@style/LinearLayoutDashCard"
                        android:background="@drawable/vendor_list_bg_gradient">

                        <ImageView
                            style="@style/ImageViewDashCard"
                            android:src="@drawable/drawer_vendors" />

                        <TextView
                            style="@style/TextViewDashCard"
                            android:text="@string/drawerTitleVendors" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="6dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDashboard"
                    style="@style/CardViewDash"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardElevation="2dp">

                    <LinearLayout
                        style="@style/LinearLayoutDashCard"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/drawer_dashboard"
                            app:tint="@color/actionbar" />

                        <TextView
                            style="@style/TextViewDashCard"
                            android:text="@string/drawerTitleHome"
                            android:textColor="@color/actionbar" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
