<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/includedToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:padding="0dp"
                    android:theme="@style/AppTheme"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_weight="1">

                                <ImageView
                                    android:id="@+id/img_menu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:foreground="?android:attr/selectableItemBackground"

                                    android:padding="@dimen/_10sdp"
                                    android:src="@drawable/ic_menu" />

                                <TextView
                                    android:id="@+id/textTitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="4dp"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/regular"
                                    android:singleLine="true"
                                    android:text="@string/appTitle"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.appcompat.widget.Toolbar>


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/linTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="140dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtMarriageName"
                            style="@style/TextViewTitleCommon"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:text="Groom and Bride"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtDays"
                                    style="@style/TextViewTitleCommon"
                                    android:text="00"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <TextView
                                    style="@style/TextViewLightCommon"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:text="Days"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <TextView
                                style="@style/TextViewTitleCommon"
                                android:layout_gravity="top"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtHours"
                                    style="@style/TextViewTitleCommon"
                                    android:text="00"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <TextView
                                    style="@style/TextViewLightCommon"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:text="Hrs"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <TextView
                                style="@style/TextViewTitleCommon"
                                android:layout_gravity="top"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtMinutes"
                                    style="@style/TextViewTitleCommon"
                                    android:text="00"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <TextView
                                    style="@style/TextViewLightCommon"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:text="Mins"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <TextView
                                style="@style/TextViewTitleCommon"
                                android:layout_gravity="top"
                                android:text=":"
                                android:textColor="@color/black"
                                android:textSize="20dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtSeconds"
                                    style="@style/TextViewTitleCommon"
                                    android:text="00"
                                    android:textColor="@color/black"
                                    android:textSize="20dp" />

                                <TextView
                                    style="@style/TextViewLightCommon"
                                    android:layout_width="wrap_content"
                                    android:gravity="center"
                                    android:text="Secs"
                                    android:textColor="@color/black"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                </FrameLayout>

                <TextView
                    android:id="@+id/remainingTime"
                    style="@style/TextViewTitleCommon"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="timer"
                    android:textColor="@color/actionbar"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/linRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginRight="6dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTasks"
                        style="@style/CardViewDash"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/tasklist">

                        </ImageView>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardGuests"
                        style="@style/CardViewDash"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/guests"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBudget"
                        style="@style/CardViewDash"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/budget"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardVendor"
                        style="@style/CardViewDash"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground">

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:src="@drawable/vendors"/>

                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="6dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardDashboard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        style="@style/CardViewDash"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardElevation="2dp">

                        <LinearLayout
                            style="@style/LinearLayoutDashCard"
                            android:layout_width="wrap_content"
                            android:clickable="false"

                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/drawer_dashboard"
                                app:tint="@color/actionbar" />

                            <TextView
                                style="@style/TextViewDashCard"
                                android:text="@string/drawerTitleHome"
                                android:textColor="@color/actionbar" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <include
        android:id="@+id/nav_drawer"
        layout="@layout/nav_header_main"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
</androidx.drawerlayout.widget.DrawerLayout>
