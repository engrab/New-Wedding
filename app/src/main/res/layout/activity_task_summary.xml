<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="layout/activity_task_summary_0">

    <include
        android:id="@+id/includedToolbar"
        layout="@layout/toolbar_binding" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/linRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView style="@style/CardViewCommon">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp">

                        <TextView
                            style="@style/TextViewTitleCommon"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:tag="binding_1"
                            android:textColor="@color/actionbar" />

                        <ImageView
                            android:id="@+id/imgEdit"
                            style="@style/ImageViewButtonCommon"
                            android:layout_gravity="right"
                            android:visibility="invisible"
                            app:tint="@color/actionbar" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/actionbar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewTitleCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:text="@string/category" />

                            <LinearLayout
                                android:id="@+id/linCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/et_rounded_square_normal"
                                android:saveEnabled="false">

                                <ImageView
                                    android:id="@+id/imgIcon"
                                    style="@style/ImageViewButtonCommon"
                                    android:tag="binding_2"
                                    app:tint="@color/actionbar" />

                                <TextView
                                    style="@style/TextViewTitleCommon"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:tag="binding_3" />

                                <ImageView
                                    style="@style/ImageViewButtonCommon"
                                    android:padding="12dp"
                                    android:src="@drawable/down" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewTitleCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:tag="binding_4" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/divider" />

                            <TextView
                                style="@style/TextViewTitleLightCommon"
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:tag="binding_5"
                                android:textColor="@color/textColorRegular" />

                            <TextView
                                style="@style/TextViewTitleLightCommon"
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:tag="binding_6"
                                android:textColor="@color/green" />

                            <TextView
                                style="@style/TextViewTitleLightCommon"
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:tag="binding_7"
                                android:textColor="@color/red" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/TextViewTitleCommon"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:tag="binding_8" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0.5dp"
                                android:background="@color/divider" />

                            <TextView
                                style="@style/TextViewTitleLightCommon"
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:tag="binding_9"
                                android:textColor="@color/textColorRegular" />

                            <TextView
                                style="@style/TextViewTitleLightCommon"
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:tag="binding_10"
                                android:textColor="@color/green" />

                            <TextView
                                style="@style/TextViewTitleLightCommon"
                                android:layout_width="match_parent"
                                android:layout_marginTop="4dp"
                                android:layout_weight="1"
                                android:tag="binding_11"
                                android:textColor="@color/red" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
