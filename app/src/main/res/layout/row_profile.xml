<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:tag="layout/row_profile_0">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgIcon"
                style="@style/ImageViewButtonCommon"
                android:layout_marginRight="4dp"
                android:padding="0dp"
                android:src="@drawable/wedding_couple"
                app:tint="@color/actionbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    style="@style/TextViewTitleCommon"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:singleLine="false"
                    android:tag="binding_1" />

                <TextView
                    android:id="@+id/desc"
                    style="@style/TextViewLightCommon"
                    android:tag="binding_2" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgSelect"
                android:src="@drawable/btn_selector_rounded_actionbar"
                style="@style/ImageViewSwitchCommon"
                android:tag="binding_3" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
